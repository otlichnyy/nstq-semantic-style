/*******************************
         Site Overrides
*******************************/
@borderRadius: 8px;
@transformOrigin: 50% 25%;
@boxShadow:
  0px 2px 4px rgba(0, 0, 0, 0.06), 
  0px 4px 6px rgba(0, 0, 0, 0.1)
;

/* Header */
@headerColor: @gray-800;
@headerBorder: none;

/* Modal Actions */
@actionBorder: 1px solid @gray-200;
@actionBackground: @gray-200;